{
  "manifest_version": 3,
  "name": "Select Tabs",
  "description": "Select multiple tabs within a window in various ways",
  "version": "5.1.0",
  "icons": {
    "48": "selecttabs.svg",
    "96": "selecttabs.svg"
  },
  "permissions": [
    "browserSettings",
    "menus",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background/background.js"],
    "type": "module"
  },
  "action": {
    "default_icon": {
      "48": "selecttabs.svg",
      "96": "selecttabs.svg"
    }
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "selecttabs@lionelw",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "commands": {
    "duplicates": {
      "description": "URL-based: Duplicates"
    },
    "sameSite": {
      "description": "URL-based: Same Site"
    },
    "sameSite__cluster": {
      "description": "URL-based: Same Site Cluster"
    },
    "sameSite__descendants": {
      "description": "URL-based: Same Site and Descendants"
    },
    "descendants": {
      "description": "Tab Tree: Descendants"
    },
    "parent": {
      "description": "Tab Tree: Parent"
    },
    "parent__descendants": {
      "description": "Tab Tree: Parent and Descendants (Family)"
    },
    "siblings": {
      "description": "Tab Tree: Siblings"
    },
    "siblings__descendants": {
      "description": "Tab Tree: Siblings and Descendants"
    },
    "sameTabGroup": {
      "description": "Membership: Same Tab Group"
    },
    "sameContainer": {
      "description": "Membership: Same Container"
    },
    "toStart": {
      "description": "Directional: To the Start"
    },
    "toEnd": {
      "description": "Directional: To the End"
    },
    "addLeft": {
        "description": "Directional: Add Left | Add Above"
    },
    "addRight": {
      "description": "Directional: Add Right | Add Below"
    },
    "trailLeft": {
        "description": "Directional: Trail Left | Trail Up"
    },
    "trailRight": {
      "description": "Directional: Trail Right | Trail Down"
    },
    "past5Minutes": {
      "description": "Temporal: Accessed in the Past 5 Minutes"
    },
    "pastHour": {
      "description": "Temporal: Accessed in the Past 1 Hour"
    },
    "past24Hours": {
      "description": "Temporal: Accessed in the Past 24 Hours"
    },
    "today": {
      "description": "Temporal: Accessed Today"
    },
    "yesterday": {
      "description": "Temporal: Accessed Yesterday"
    },
    "all": {
      "description": "Selection: All"
    },
    "active": {
      "description": "Selection: Clear Selection"
    },
    "unselected": {
      "description": "Selection: Invert Selection"
    },
    "cluster": {
      "description": "Selection: Selection Cluster"
    },
    "previous": {
      "description": "Selection: Undo Last Command"
    },
    "cycleForward": {
      "description": "Switch in Selection: Cycle Forward",
      "suggested_key": {
        "default": "Ctrl+Period"
      }
    },
    "cycleBackward": {
      "description": "Switch in Selection: Cycle Backward",
      "suggested_key": {
        "default": "Ctrl+Comma"
      }
    }
  }
}